<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FoodCategoryChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="ensureMinTouchTargetSize">false</item>
        <item name="android:height">32dp</item>
        <item name="android:minWidth">88dp</item>
        <item name="chipCornerRadius">6dp</item>

        <item name="android:clickable">true</item>

        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAlignment">center</item>

        <item name="android:elevation">16dp</item>

        <item name="foodCategoryTextColorSelected">?attr/colorPrimary</item>
        <item name="foodCategoryTextColorUnselected">?attr/colorOnBackground</item>

        <item name="foodCategoryBackgroundColorSelected">?attr/colorPrimaryVariant</item>
        <item name="foodCategoryBackgroundColorUnselected">?attr/backgroundColor</item>

        <item name="background">@color/chip_background_color_selected</item>
    </style>

    <style name="ChipSelectedTextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/foodCategoryTextColorSelected</item>
    </style>

    <style name="ChipUnselectedTextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/foodCategoryTextColorUnselected</item>
    </style>

</resources>