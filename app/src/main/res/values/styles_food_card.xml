<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Widget.FoodCard.PriceButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.FoodCard.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/foodCardBody2</item>
    </style>

    <style name="TextAppearance.FoodCard.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:textStyle">bold</item>
    </style>
    
</resources>