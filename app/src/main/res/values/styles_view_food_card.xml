<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ViewFoodCardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/titleColor</item>
        <item name="android:textStyle">bold</item>
        <item name="singleLine">true</item>
    </style>

    <style name="ViewFoodCardComposition">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/compositionColor</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ViewFoodCardMinPrice" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

</resources>