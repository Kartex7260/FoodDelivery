<resources xmlns:tools="http://schemas.android.com/tools">
    
    <style name="Theme.FoodDelivery" parent="Theme.FoodDelivery.Base">
        <item name="android:statusBarColor">?attr/background</item>
        <item name="android:navigationBarColor">?attr/bottomNavBarColor</item>
        <item name="colorOnSurfaceVariant">@color/bottomBarIconNonSelected</item>
    </style>
    
    <!-- Base application theme. -->
    <style name="Theme.FoodDelivery.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="background">@color/backgroundLight</item>
        <item name="colorOnBackground">@color/onBackgroundLight</item>
        <item name="bottomNavBarColor">@color/bottomBarBackgroundLight</item>

        <item name="titleColor">@color/titleColorLight</item>
        <item name="compositionColor">@color/compositionLight</item>

        <item name="chipUnselectedTextColor">@color/chipUnselectedLight</item>
    </style>
    
</resources>